        DEFAULT_layer {
            bindings = <
            &kp Q       &kp W       &kp E           &kp R       &bt BT_CLR  &bt BT_CLR  &kp U        &kp I           &kp O       &kp P     
            &mt LCTL A  &mt LALT S  &mt LSHIFT D	&kp F       &bt BT_NXT  &bt BT_NXT  &kp J        &mt RSHIFT K    &mt RALT L  &mt RCTL SEMICOLON
            &kp Z       &kp X       &kp C           &kp V 		&bt BT_PRV  &bt BT_PRV  &kp M        &kp COMMA       &kp PERIOD  &kp SLASH
                                                    &kp LGUI    &kp SPC     &kp ESCAPE  &kp BACKSPACE
            >;
		};
	};
